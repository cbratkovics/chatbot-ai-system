# AI Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false
APP_NAME=AI Chatbot System

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
WORKERS=1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_BURST=10

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300
WS_MESSAGE_QUEUE_SIZE=100

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0
MAX_RETRY_DELAY=10.0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_SECRET_KEY=your-jwt-secret-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://chatbot:chatbot123@localhost:5432/chatbot
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
SEMANTIC_CACHE_THRESHOLD=0.85
CACHE_MAX_ENTRIES=10000

# Model Defaults
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048
DEFAULT_TOP_P=1.0
DEFAULT_FREQUENCY_PENALTY=0.0
DEFAULT_PRESENCE_PENALTY=0.0

# OpenAI Configuration
DEFAULT_OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# Anthropic Configuration
DEFAULT_ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_TIMEOUT=30
ANTHROPIC_MAX_RETRIES=3

# Monitoring & Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
PROMETHEUS_PORT=9090
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Feature Flags
ENABLE_STREAMING=true
ENABLE_FAILOVER=true
ENABLE_SEMANTIC_CACHE=true
ENABLE_LOAD_BALANCING=true
ENABLE_CIRCUIT_BREAKER=true

# Multi-Tenancy
ENABLE_MULTI_TENANCY=false
DEFAULT_TENANT_TIER=basic
TENANT_ISOLATION_MODE=logical

# Performance Tuning
CONNECTION_POOL_SIZE=100
THREAD_POOL_SIZE=10
ASYNC_TIMEOUT=60
BATCH_SIZE=10

# Development Settings
DEV_MODE=false
MOCK_PROVIDERS=false
DISABLE_AUTH=false
VERBOSE_LOGGING=false
