# AI Chatbot System - Environment Configuration
# Copy this to .env and update with your values

# Application
APP_NAME="AI Chatbot System"
ENVIRONMENT=development
DEBUG=false
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# API Keys (Required - Get free tier keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Redis (local development)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# Rate Limiting (reasonable defaults)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
SEMANTIC_CACHE_THRESHOLD=0.85
CACHE_MAX_ENTRIES=10000

# Model Configuration
DEFAULT_MODEL=gpt-3.5-turbo
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048
DEFAULT_PROVIDER=openai
ENABLE_FALLBACK=true
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-haiku-20240307

# WebSocket
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Security
JWT_SECRET_KEY=change-me-in-production-use-strong-secret
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO

# Timeouts
REQUEST_TIMEOUT=30
MAX_CONTEXT_LENGTH=8000
MAX_TOKENS=4000

# Optional Database (not required for basic demo)
# DATABASE_URL=postgresql://user:password@localhost/chatbot_db

# Feature Flags
ENABLE_STREAMING=true
ENABLE_SEMANTIC_CACHE=true

# Development Settings
DEV_MODE=false
MOCK_PROVIDERS=false