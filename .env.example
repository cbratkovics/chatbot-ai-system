# Application
APP_NAME=Enterprise Chatbot Platform
VERSION=1.0.0
DEBUG=false
PORT=8000
WORKERS=4
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/chatbot
DATABASE_URL_TEST=postgresql+asyncpg://user:pass@localhost:5432/chatbot_test

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Providers
PROVIDER_A_API_KEY=your-key-here
PROVIDER_A_BASE_URL=https://api.provider-a.com
PROVIDER_B_API_KEY=your-key-here
PROVIDER_B_BASE_URL=https://api.provider-b.com

# Monitoring
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
